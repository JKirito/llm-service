{
  "name": "@llm-apps/api",
  "version": "1.0.0",
  "description": "API service for the LLM service monorepo",
  "private": true,
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build ./src/index.ts --outdir ./dist --target bun",
    "start": "bun dist/index.js",
    "test": "bun test",
    "lint": "bun run lint:eslint && bun run lint:prettier",
    "lint:eslint": "eslint src --ext .ts,.tsx",
    "lint:prettier": "prettier --check src",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@llm-service/shared-utils": "workspace:*",
    "@llm-service/logger": "workspace:*",
    "@llm-service/types": "workspace:*",
    "elysia": "^1.1.0"
  },
  "devDependencies": {
    "@llm-service/eslint-config": "workspace:*",
    "@types/bun": "^1.1.0"
  }
}
